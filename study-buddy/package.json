{
  "name": "study-buddy",
  "version": "1.0.0",
  "description": "개인화된 학습 도우미 애플리케이션",
  "main": "index.js",
  "scripts": {
    "dev": "./scripts/start-dev.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "install:all": "npm run install:backend && npm run install:student && npm run install:parent",
    "install:backend": "cd backend && npm install",
    "install:student": "cd student-app && npm install", 
    "install:parent": "cd parent-app && npm install",
    "build:all": "npm run build:backend && npm run build:student && npm run build:parent",
    "build:backend": "echo 'Backend build completed'",
    "build:student": "cd student-app && npm run build",
    "build:parent": "cd parent-app && npm run build",
    "test:all": "npm run test:backend && npm run test:student && npm run test:parent",
    "test:backend": "cd backend && npm test",
    "test:student": "cd student-app && npm test -- --watchAll=false",
    "test:parent": "cd parent-app && npm test -- --watchAll=false"
  },
  "keywords": [
    "education",
    "study",
    "learning",
    "kids",
    "parental-control",
    "schedule",
    "notification"
  ],
  "author": "Study Buddy Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/study-buddy.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}